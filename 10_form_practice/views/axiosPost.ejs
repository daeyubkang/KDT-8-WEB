<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://code.jquery.com/jquery-3.7.0.js"
      integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <form name="axiosPost">
      아이디: <input type="text" id="id1" name="id1" /><br />
      비밀번호: <input type="password" id="password" name="password" /><br />
      <button type="button" onclick="button1()">로그인</button>
      <br />
    </form>
    <div class="result"></div>

    <script>
      const resultBox = document.querySelector(".result");
      function button1() {
        const form = document.forms["axiosPost"];
        console.log("ajax post");

        if (form.id1.value == form.password.value) {
          resultBox.textContent = `로그인 완료`;
          resultBox.style.color = "blue";
        } else {
          resultBox.textContent = `아이디와 비밀번호를 확인하세요`;
          resultBox.style.color = "red";
          return;
        }
        // console.log(form.name);
        // console.log(form.gender.value);

        const data = {
          id: form.id1.value,
          password: form.password.value,
        };
        $.ajax({
          type: "POST",
          url: "/ajax",
          data, //key == value 생략가능
          success: (res) => {
            console.log("res", res);
          },
        });
      }
    </script>
  </body>
</html>
